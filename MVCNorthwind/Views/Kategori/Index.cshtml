@using MVCNorthwind.Models;
@model IEnumerable<Categories>
@{
    ViewBag.Title = "Kategori Listesi";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Kategoriler</h2>
<hr />
<table cellpadding="0" cellspacing="0" border="1" class="liste">
    <tr>
        <th>ID</th>
        <th>Isim</th>
        <th>Aciklama</th>
        <th>Seçenekler</th>
    </tr>
    @foreach (Categories item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>
                @if (item.Description != null)
                {
                    @item.Description
                }
                else
                {
                    <label style="color:red">YOOK</label>
                }
            </td>
            <td>
                <a href="@Url.Action("Duzenle","Kategori", new {id = item.CategoryID})" >Düzenle</a>
                <a href="@Url.Action("Duzenle","Kategori")"style="float:right">Sil</a>
            </td>
        </tr>
    }
</table>
