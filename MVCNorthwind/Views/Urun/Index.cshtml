@using MVCNorthwind.Models
@model IEnumerable<Products>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Index</h2>
<hr />
<table cellpadding="0" cellspacing="0" border="1" class="liste">
    <tr>
        <td>ID</td>
        <td>Isim</td>
        <td>Kategori</td>
        <td>Tedarikçi</td>
        <td>Stok</td>
        <td>Fiyat</td>
        <td>Seçenekler</td>
        @foreach (Products item in Model)
        {
        <tr>
            <td>@item.ProductID</td>
            <td>@item.ProductName</td>
            @if (item.Categories.CategoryName != null)
            {
                <td>@item.Categories.CategoryName</td>
            }
            else
            {
                <td>YOK</td>
            }
            <td>@item.Suppliers.CompanyName</td>
            <td>@item.UnitsInStock adet</td>
            <td>@item.UnitPrice ₺</td>
            @*<td>
                @{decimal price = Convert.ToDecimal(item.UnitPrice) - 2;
                }
                @price ₺
            </td>*@
            <td>

                <a href="@Url.Action("Edit", "Urun", new { id = item.ProductID })">Düzenle</a>

            </td>
        </tr>
    }
    </table>
